//-
  options.items - массив с элементами меню
  item.href - ссылка пункта меню
  item.title - текст пункта меню
  itemSub.href - ссылка пункта подменю
  itemSub.title - текст пункта подменю
  item.class - добавляет 


mixin menu(options)
  if !options
    - options = {}
  if !options.items
    - options.items = []

  .menu.js-menu
    button.menu__button.js-menu__button Menu
    nav.menu__main
      ul.menu__list
        each item in options.items
          li.menu__item(class = item.subMenu ? 'menu__item_sub' : '')
            a.menu__link(href = item.href || '/some_page' class = item.subMenu ? 'js-menu__link' : '')=item.title
            if item.subMenu
              span.menu__dropbtn expand_more
              ul.menu__submenu.js-menu__submenu
                each itemSub in item.subMenu
                  a.menu__subitem(href = itemSub.href)=itemSub.title