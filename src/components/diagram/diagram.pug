mixin diagram(options)
  if !options
    - options = {}  
  if !options.items
    - options.items = []

  .diagram.js-diagram
    .diagram__container
      h2.diagram__title=options.title
      .diagram__inner
        svg.diagram__svg( width="120" height="120" viewBox="0 0 35 35" )
          defs
            linearGradient( id="first" x1="0%" y1="0%" x2="0%" y2="100%" )
              stop( offset="0%" stop-color="#FFE39C" )
              stop( offset="100%" stop-color="#FFBA9C" )
            linearGradient( id="second" x1="0%" y1="0%" x2="0%" y2="100%" )
              stop( offset="0%" stop-color="#6FCF97" )
              stop( offset="100%" stop-color="#66D2EA" )
            linearGradient( id="third" x1="0%" y1="0%" x2="0%" y2="100%" )
              stop( offset="0%" stop-color="#BC9CFF" )
              stop( offset="100%" stop-color="#8BA4F9" )
            linearGradient( id="fourth" x1="0%" y1="0%" x2="0%" y2="100%" )
              stop( offset="0%" stop-color="#919191" )
              stop( offset="100%" stop-color="#3D4975" )
          circle.diagram__circle( cx="50%" cy="50%" r="15.9" stroke="url(#first)" )
          circle.diagram__circle( cx="50%" cy="50%" r="15.9" stroke="url(#second)" )
          circle.diagram__circle( cx="50%" cy="50%" r="15.9" stroke="url(#third)" )
          circle.diagram__clean( cx="50%" cy="50%" r="17.5")
          g.diagram__desc
            text.diagram__number(x="50%" y="45%") 260
            text.diagram__text(x="50%" y="48%") голосов
        .diagram__legend
          ul.diagram__list
            each item in options.items 
              li.diagram__item.js-diagram__item=item